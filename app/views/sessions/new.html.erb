<h1 class="center">Welcome back...</h1>

<div id="login-form" class="container">

  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email, class: "form-text" %>
    <%= f.text_field :email %>

    <%= f.label :password, class: "form-text" %>
    <%= f.password_field :password %>

    <%= f.submit "Login" %>
  <% end %>
</div>

<div class="site-font center create-acct">
  <p>
    Seriously? You don't have an account?
  </p>
    <%= link_to "Save yourself", new_user_path, class:"btn black" %>
</div>
