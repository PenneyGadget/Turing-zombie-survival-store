<p id="required-field" class="container">
  <%= "*Required field" %>
</p>
<div id="user-form" class="container">
  <%= form_for @user do |f| %>
    *<%= f.label :first_name, class: "form-text" %>
    <%= f.text_field :first_name %>

    *<%= f.label :last_name, class: "form-text" %>
    <%= f.text_field :last_name %>

    <%= f.label :address, class: "form-text" %>
    <%= f.text_field :address %>

    <%= f.label :city, class: "form-text" %>
    <%= f.text_field :city %>

    <%= f.label :state, class: "form-text" %>
    <%= f.text_field :state %>

    <%= f.label :zipcode, class: "form-text" %>
    <%= f.text_field :zipcode %>

    *<%= f.label :email, class: "form-text" %>
    <%= f.text_field :email %>

    *<%= f.label :password, class: "form-text" %>
    <%= f.password_field :password %>

    *<%= f.label :password_confirmation, class: "form-text" %>
    <%= f.password_field :password_confirmation %>

    <%= f.check_box "safe_house" %>
    <%= f.label "safe_house", "Would you volunteer your home as a safe house?" %>

    <%#= f.label :would_you_volunteer_your_home_as_a_safe_house?, id: "user_safe_house", class: "form-text" %>
    <%#= check_box_tag "user_safe_house" %>

    <%= f.submit "Submit", class:"submit-btn" %>
  <% end %>
</div>
